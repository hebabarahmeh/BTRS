@model BTRS.Models.Bus

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f0f8ff; /* Alice Blue background */
        color: #001f3f; /* Dark Blue text */
    }

    h1 {
        color: #1565c0;
        text-align: center;
        margin-bottom: 30px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>
<h1>Edit</h1>

<h4>Bus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="CaptinName" class="control-label"></label>
                <input asp-for="CaptinName" class="form-control" />
                <span asp-validation-for="CaptinName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Num_of_S" class="control-label"></label>
                <input asp-for="Num_of_S" class="form-control" />
                <span asp-validation-for="Num_of_S" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> TripID</label>

                <select name="tripID" id="tripID" class="form-control">
                    @for (int i = 0; i < ViewBag.Trip.Count; i++)
                    {
                        <option value=@ViewBag.Trip[i].Id>
                            @ViewBag.Trip[i].dest

                        </option>
                    }

                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
